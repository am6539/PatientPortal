
@{
    ViewBag.Title = "PHR - Hồ sơ y tế cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <link href="~/Content/checkbox.css" rel="stylesheet" />
    <link href="~/Libs/DataTable/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Libs/Chosen/css/chosen.css" rel="stylesheet" />
    <style>
        .checkbox-mark div {
            float: none;
        }

        .bg-green {
            background: #1ABB9C !important;
            border: 1px solid #1ABB9C !important;
            color: #fff;
        }

        .bg-orange {
            background: #F39C12 !important;
            border: 1px solid #F39C12 !important;
            color: #fff;
        }

        .bg-blue {
            background: #337ab7 !important;
            border: 1px solid #337ab7 !important;
            color: #fff;
        }
    </style>
}

<div class="card">
    <div class="card-title">@ViewBag.Title</div>
    @Html.Raw(TempData["Alert"])
    @using (Html.BeginForm("Prescription", "PHR", FormMethod.Get))
    {
        <div class="card-actionbar">
            <div class="col-md-3">
                <select data-placeholder="Loại thông tin" class="chosen-select" style="width:100%;" tabindex="1">
                    <option value=""></option>
                    <option value="1">Đơn thuốc</option>
                    <option value="2">Xét nghiệm</option>
                    <option value="3">Chuẩn đoán hình ảnh</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" id="dateFrom" class="form-control" placeholder="Từ ngày" />
            </div>
            <div class="col-md-3">
                <input type="text" id="dateTo" class="form-control"  placeholder="Đến ngày" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-default"><i class="fa fa-search" fa-search" aria-hidden="true"> Tìm kiếm</i></button>
            </div>
        </div>
    }

    <div class="card-content table-actionbar-top">
        <!--Use MVC-->
        <table id="table_id" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" role="grid" aria-describedby="example_info" style="width: 100%;">
            <thead>
                <tr>
                    <td class="text-center">#</td>
                    <td>Ngày</td>
                    <td>Số phiếu</td>
                    <td>Tên mẫu</td>
                    <td>Loại</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>20/03/2017</td>
                    <td><a href="#">TN.1701.0050555</a></td>
                    <td>Đơn thuốc</td>
                    <td>THUOC</td>
                    <td><i class="fa fa-warning"></i></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>20/03/2017</td>
                    <td>17.0102.000782</td>
                    <td>CRP định lượng</td>
                    <td>XET_NGHIEM</td>
                    <td><i class="fa fa-warning"></i></td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>20/03/2017</td>
                    <td><a href="/PHR/PDFViewer"> 17.0101.000870</a></td>
                    <td>Tổng phân tích tế bào máu ngoại vi (bằng máy đếm laser)</td>
                    <td>XET_NGHIEM</td>
                    <td><i class="fa fa-warning"></i></td>
                </tr>
                <tr style="background-color:#feecd3">
                    <td>4</td>
                    <td>20/03/2017</td>
                    <td>17.0204.000464</td>
                    <td>Chụp Xquang ngực thẳng [số hóa 1 phim]</td>
                    <td>CDHA</td>
                    <td><i class="fa fa-warning"></i></td>
                </tr>
            </tbody>
        </table>

    </div>
</div>


@section scripts{
    <script src="~/Libs/DataTable/jquery.dataTables.js"></script>
    <script src="~/Libs/Chosen/js/chosen.jquery.min.js"></script>
    <script type="text/javascript">
        var config = {
          '.chosen-select'           : {}
        }
        for (var selector in config) {
          $(selector).chosen(config[selector]);
        }
                    </script>
                    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable({
                "language": {
                    url: '/Libs/Datatable/Vietnamese.json'
                }
            });

            $("#dateFrom").datetimepicker({
                format: 'DD/MM/YYYY',
                locale: 'vi'
            });
            $("#dateTo").datetimepicker({
                format: 'DD/MM/YYYY',
                locale: 'vi'
            });
        });
        </script>
}


