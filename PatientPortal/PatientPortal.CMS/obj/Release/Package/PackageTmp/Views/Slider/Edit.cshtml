@using PatientPortal.Provider.Helpers;
@model PatientPortal.CMS.Models.SliderViewModel
@{
    ViewBag.Title = "Trình chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Content/checkbox-radio-build.css" rel="stylesheet" />
}
<div class="card">
    @Html.Raw(TempData["Alert"])
    <div class="card-title">@ViewBag.Title</div>
    <div class="card-content">
        @using (Html.IBeginForm("Edit", "Slider"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.IGroupSubmitButton("Cập nhật thông tin", true, true, null, null, 3, Url.Action("Index"))
            @Html.IGroupTextBoxFor(m => m.Title, true, "Tiêu đề", null, 12)
            @Html.IGroupTextAreaFor(m => m.Description, true, 3, 12)
            @Html.IGroupFileUpload(m => m.Image, "fileUpload", false, 12)
            @Html.IGroupCheckBoxFor(m => m.IsUsed, false, "IsUsed", 12, "Chọn để sử dụng")
            @Html.IGroupTextBoxFor(m => m.ExpiredDate, true, "Ngày hết hạn", null, 12)
        }
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ExpiredDate").datetimepicker({
                format: 'DD/MM/YYYY',
                locale: 'vi'
            });
        });
    </script>
}
