@using PatientPortal.Provider.Helpers;
@model PatientPortal.CMS.Models.SliderModel
@{
    ViewBag.Title = "Slide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{

<link href="~/Content/checkbox-radio-build.css" rel="stylesheet" />
}
<div class="card">
    @Html.Raw(TempData["Alert"])
    <div class="card-title">@Html.ITitle("Trình chiếu", "sliders")</div>
    <div class="card-content">
        <div class="col-md-5">
            <div id="panelAdd">
                @Html.Partial("_Create", Model.SliderViewModel)
            </div>
        </div>
        <div class="col-md-7">
            <div id="panelList">
                @Html.Partial("_List", Model.lstSliderViewModel)
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ExpiredDate").datetimepicker({
                format: 'DD/MM/YYYY',
                locale: 'vi',
                minDate: Date.now(),
            });
        });
    </script>
}