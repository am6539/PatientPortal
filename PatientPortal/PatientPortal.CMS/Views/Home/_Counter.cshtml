@model  List<PatientPortal.Domain.Models.CMS.Report.DashboardCounter>
@{ 
    var box1 = Model.Where(x => x.BoxNumber == 1).Select(x => x.Total).FirstOrDefault();
    var box2 = Model.Where(x => x.BoxNumber == 2).Select(x => x.Total).FirstOrDefault();
    var box3 = Model.Where(x => x.BoxNumber == 3).Select(x => x.Total).FirstOrDefault();
    var box4 = Model.Where(x => x.BoxNumber == 4).Select(x => x.Total).FirstOrDefault();
}
<div class="col-md-3">
    <div class="card">
        <div class="card-title">
            <label>Bài viết</label>
            <div class="pull-right">
                <span style="background-color:#0094ff; color:white; border-radius:3px; padding:3px; font-size:0.6em;">Total</span>
            </div>
        </div>
        <div class="card-content text-center">
            <h3>@(box1 > 0 ? String.Format("{0:#,###}",box1):"0")</h3>
            <h6>TỔNG CỘNG</h6>
        </div>
    </div>
</div>
<div class="col-md-3">
    <div class="card">
