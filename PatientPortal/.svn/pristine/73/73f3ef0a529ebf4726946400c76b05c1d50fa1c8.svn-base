        //hideControlselectDoctor();
        if (valueSelected == 0) {
            $("#doctorSelected").show(500);
            $("#searchDoctor").hide(500);
            $("#quickviewProfile").hide(500);
        }
        if (valueSelected == 2) {
            $("#searchDoctor").show(500);
            $("#doctorSelected").hide(500);
            $("#quickviewProfile").hide(500);
        }
        if(valueSelected == 1)
        {
            $("#searchDoctor").hide(500);
            $("#doctorSelected").hide(500);
        }
    });

