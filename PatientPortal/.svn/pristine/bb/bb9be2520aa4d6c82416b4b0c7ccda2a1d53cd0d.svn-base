@using PatientPortal.Provider.Helpers;
@model PatientPortal.CMS.Models.FeatureViewModel
@{
    ViewBag.Title = "Dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <link href="~/Content/checkbox-radio-build.css" rel="stylesheet" />
}
<div class="card">
    @Html.Raw(TempData["Alert"])
    <div class="card-title">@Html.ITitle("Dịch vụ", TitleBar.Edit)</div>
    <div class="card-content">
        @using (Html.IBeginForm("Edit", "Feature"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.IGroupSubmitButton("Cập nhật thông tin", true, true, null, null, 3, Url.Action("Index"))
            @Html.HiddenFor(m => m.Id)
            @Html.IGroupTextBoxFor(m => m.Title, true, "Tên dịch vụ", null, 12)
            @Html.IGroupFileUpload(m => m.Image, "fileUpload", false, 12)
            @Html.IGroupTextAreaFor(m => m.Description, true, 5, "Nội dung hiển thị", null, 12)
            @Html.IGroupTextBoxFor(m => m.Handler, false, "Địa chỉ URL", null, 12)
            @Html.IGroupCheckBoxFor(m => m.IsUsed, false, "IsUsed", 12, "Chọn để sử dụng")

        }

    </div>
</div>

