CREATE PROCEDURE [dbo].[usp_spa_Post]
	@languageCode CHAR(3) = 'vi',
	@numTop TINYINT = 1
AS BEGIN
	BEGIN TRY
	SET NOCOUNT ON
		SET TRANSACTION ISOLATION LEVEL READ COMMITTED
		DECLARE @return BIT = 1;

		IF @languageCode != ''
			SELECT TOP (@numTop)
				p.Id, 
				t.Title, 
				p.CategoryId,
				p.PublishDate,
				P.[Image],
				P.Author,
				c.Name AS CategoryName, 
				ws.Id AS WorkflowStateId,
				ws.Name AS WorkflowStateName
			FROM 
				[dbo].Post p, 
				[dbo].PostTrans t, 
				[dbo].Category c, 
				WorkflowState ws
			WHERE 
				p.Id = t.PostId
				AND p.CategoryId = c.Id
				AND p.WorkflowStateId = ws.Id
				AND WorkflowStateId = 3
		ELSE
			SET @return = 0;

	END TRY
	BEGIN CATCH
		IF @@TRANCOUNT <> 0
			BEGIN
				RETURN NULL
			END
	END CATCH
	SELECT @return
END
