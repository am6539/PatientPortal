@using PatientPortal.Provider.Helpers;
@model PatientPortal.CMS.Models.CategoryViewModel

<div class="card">
    <div class="card-content">
        @using (Html.IBeginForm("Create", "Category"))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.IGroupSubmitButton("Thêm chuyên mục", true, true, null, null, 3)
            @Html.HiddenFor(m => m.Id)
            @Html.IGroupTextBoxFor(m => m.Name, true, "Tên chuyên mục", null, 12)
            @Html.IGroupTextBoxFor(m => m.Handler, true, "Url", null, 12)
            @Html.IGroupFileUpload(m => m.Image, "fileUpload", false, 12)
            @Html.IGroupTextBoxFor(m => m.Sort, true, null, new { @type = "number", @min = "0" }, 12)
            @Html.IGroupDropDownListFor(m => m.ParentId, new SelectList(ViewBag.Categories, "Id", "Name"), false, "Chọn chuyên mục", null, 12)
        }


    </div>
</div>
