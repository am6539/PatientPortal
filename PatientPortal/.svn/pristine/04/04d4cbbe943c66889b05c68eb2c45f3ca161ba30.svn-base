CREATE PROC [dbo].[usp_Category]
	@Id TINYINT,
	@ParentId TINYINT
AS BEGIN
	SET NOCOUNT ON
	SET TRANSACTION ISOLATION LEVEL READ COMMITTED

	BEGIN TRY
		IF @Id > 0
			SELECT * FROM [dbo].Category
			WHERE Id = @Id
			order by Id
		IF @ParentId > 0
			SELECT * FROM [dbo].Category
			WHERE ParentId = @ParentId
			order by Id
		ELSE
			SELECT * FROM [dbo].[Category]
	END TRY
	BEGIN CATCH
		IF @@TRANCOUNT <> 0 
		BEGIN
			RETURN NULL
		END
	END CATCH
END