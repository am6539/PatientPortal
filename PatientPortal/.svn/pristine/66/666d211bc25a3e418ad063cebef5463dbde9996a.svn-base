using PatientPortal.DataAccess.Repo.CORE;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using PatientPortal.Domain.Models.CORE;
using System.Transactions;
using PatientPortal.DataAccess.Dapper;
using Dapper;
using PatientPortal.Domain.Utilities;
using PatientPortal.DataAccess.Repo.Wrapper;
using PatientPortal.Domain.Common;

namespace PatientPortal.DataAccess.CORE
{
    public class ModuleImpl : IModule
    {
        private readonly IAdapterPattern _adapterPattern;

        public ModuleImpl(IAdapterPattern adapterPattern)
        {
            this._adapterPattern = adapterPattern;
        }

        /// <summary>
        /// Get Module
        /// </summary>
        /// <param name="param">Dictionary</param>
        /// <returns></returns>
        public async Task<List<Module>> Query(Dictionary<string, object> param)
        {
            try
            {
                var data = await _adapterPattern.ExecuteQuery<Module>(param, "usp_Module", DataConfiguration.instanceCore);
                return data.ToList();

            }
            catch (Exception ex)
            {
                LogHelper.WriteLog("Execute Appointment get data: " + ex.Message);
                return null;
            }
        }

        /// <summary>
        /// Transaction of Module
        /// </summary>
        /// <param name="data">Object Module</param>
        /// <param name="action">I: Insert, U: Update, D: Delete</param>
        /// <returns></returns>
        public async Task<bool> Transaction(Module data, char action)
        {
            try
            {
                var val = await _adapterPattern.SingleTransaction<Module, bool>(data, "usp_Module_Transaction", action, DataConfiguration.instanceCore);
                return val;
            }
            catch (Exception ex)
            {
                LogHelper.WriteLog("Execute Appointment Transaction: " + ex.Message);
                return false;
            }
        }
    }
}
