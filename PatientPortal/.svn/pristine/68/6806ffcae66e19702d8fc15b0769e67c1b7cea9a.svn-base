CREATE PROCEDURE [dbo].[usp_Category_CheckExistName]
	@Name  NVARCHAR(50),
	@Id TINYINT
AS
BEGIN
	DECLARE @return BIT = 0;

	IF(@Id > 0)
		IF(EXISTS(SELECT TOP 1 1 FROM [dbo].[Category] WHERE [Name] = @Name and Id != @Id))
		begin
			SET @return = 1;
		end
	ELSE
	BEGIN
	IF(EXISTS(SELECT TOP 1 1 FROM [dbo].[Category] WHERE [Name] = @Name))
		begin
			SET @return = 1;
		end
	END
	SELECT @return
END
GO