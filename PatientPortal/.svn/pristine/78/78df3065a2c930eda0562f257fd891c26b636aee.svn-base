appManagement.controller("indexController", [
    "$scope", "$rootScope", "$location", 'indexServices', '$route', 'Params', '$timeout',
    function ($scope, $rootScope, $location, indexServices, $route, Params, $timeout) {

        $rootScope.title = "Trang chủ";
        $scope.Post = new Object();
        $scope.firstPost = [];
        $scope.Posts = [];
        $scope.about = [];

        //get list post
        $scope.getListPost = function () {
            var tListPost = setInterval(function () {

                indexServices.query({ languageCode: Params.languageCode }, function (data) {
                    if (data) {
                        clearInterval(tListPost);
                    }
                    $scope.firstPost = data[0];
                    data = data.slice(1);
                    //data.splice(0, 1);
                    $scope.Posts = data;
                });

            }, 200);

        };

        //get post About
        $scope.getPostAbout = function () {
            
            var tPostAbout = setInterval(function () {
                indexServices.getAbout({ languageCode: Params.languageCode }, function (data) {
                    if (data) {
                        clearInterval(tPostAbout);
                    }
                    $scope.about = data[0];
                });

            }, 200);
        };

        //get post About
        $scope.getSliders = function () {

            var tSlider = setInterval(function () {
                indexServices.getSlider(function (data) {

                    if (data) {
                        clearInterval(tSlider);
                    }

                    $scope.sliders = data;
                    $timeout(function () {

                        $("#main-slider").find('.owl-carousel').owlCarousel({
                            slideSpeed: 500,
                            paginationSpeed: 500,
                            singleItem: true,
                            navigation: true,
                            navigationText: [
                            "<i class='fa fa-angle-left'></i>",
                            "<i class='fa fa-angle-right'></i>"
                            ],
                            afterInit: progressBar,
                            afterMove: moved,
                            startDragging: pauseOnDragging,
                            transitionStyle: "fadeUp"
                        });
                    }, 1000);
                });

            }, 200);

        };

        function progressBar(elem) {
            $elem = elem;
            //build progress bar elements
            buildProgressBar();
            //start counting
            start();
        }

        function moved() {
            //clear interval
            clearTimeout(tick);
            //start again
            start();
        }

        //pause while dragging 
        function pauseOnDragging() {
            isPause = true;
        }

        //create div#progressBar and div#bar then append to $(".owl-carousel")
        function buildProgressBar() {
            $progressBar = $("<div>", {
                id: "progressBar"
            });
            $bar = $("<div>", {
                id: "bar"
            });
            $progressBar.append($bar).appendTo($elem);
        }
        function start() {
            //reset timer
            percentTime = 0;
            isPause = false;
            //run interval every 0.01 second
            tick = setInterval(interval, 10);
        };
        
        function interval() {
            if (isPause === false) {
                percentTime += 1 / 7;
                $bar.css({
                    width: percentTime + "%"
                });
                //if percentTime is equal or greater than 100
                if (percentTime >= 100) {
                    //slide to next item 
                    $elem.trigger('owl.next')
                }
            }
        }
        $scope.getDepartment = function (id) {
            indexServices.getDepartment({ id: id }, function (data) {
                $scope.department = data;
            })
        };

        $scope.getDepartments = function () {

            var tDepartments = setInterval(function () {

                indexServices.getDepartment({ id: 0 }, function (data) {
                    if (data) {
                        clearInterval(tDepartments);
                    }
                    $scope.departments = data;
                });

            }, 200);
        };

        $scope.scrollMenu = function () {
            var menu = $route.current.params.menu;
            if (menu == 'services') {
                $('html, body').animate({ scrollTop: $('#services').offset().top + 450 }, 1000);
            }
            if (menu == 'portfolio') {
                $('html, body').animate({ scrollTop: $('#portfolio').offset().top + 450 }, 1000);
            }
            if (menu == 'about') {
                $('html, body').animate({ scrollTop: $('#about').offset().top + 450 }, 1000);
            }
            if (menu == 'blog') {
                $('html, body').animate({ scrollTop: $('#blog').offset().top + 450 }, 1000);
            }
            if (menu == 'get-in-touch') {
                $('html, body').animate({ scrollTop: $('#get-in-touch').offset().top + 450 }, 1000);
            }
        };

        $scope.initFunction = function () {
            $scope.getDepartments();
            $scope.getSliders();
            $scope.getListPost();
            $scope.getPostAbout();
            $scope.scrollMenu();
        };
    }
]);