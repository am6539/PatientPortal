@using PatientPortal.Provider.Helpers;
@model PatientPortal.CMS.Models.AdvertiseViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    @Html.ITitle("quảng cáo", TitleBar.View)
</div>
<div class="modal-body">
    @if (Model.Type > 0)
    {
        <video id="videoId" style="width: 100%" height="400" controls>
            <source src="@Url.Content(Model.Resouce)" type="video/mp4">
        </video>
    }
    else
    {
        <img src="@Model.Resouce" class="img-responsive" />
    }
</div>
