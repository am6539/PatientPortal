body {
    padding-top: 50px;
    padding-bottom: 20px;
}

/* Set padding to keep content from hitting the edges */
.body-content {
    padding-left: 15px;
    padding-right: 15px;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 280px;
}
.news-home-item:after {margin: 0 15px 13px;padding-bottom: 5px;display: block;border-bottom: 1px dotted #ccc;}
.news-home-item:last-child:after {display: none;}
.img-news-home {margin-bottom: 10px;}
.thumb img{width: 100%;}
.content-news-home h2 {font-size: 15px;font-weight: 400;margin: 0 0 5px;}
.content-news-home h2 a:hover {text-decoration: underline;}
.content-news-home .newsh-content {display: inline-block;}
.content-news-home .viewmore {display: inline-block;color: #2698D6;font-size: 12px;margin-left: 3px;}
