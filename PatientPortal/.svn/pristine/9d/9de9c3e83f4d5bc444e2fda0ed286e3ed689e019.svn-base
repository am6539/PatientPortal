CREATE PROCEDURE [dbo].[usp_Post]
	@languageCode CHAR(3) = 'vi',
	@PostId INT = 0
	--@PageIndex int, 
	--@NumberPerPage int, 
	--@TotalRecordCount int out
AS BEGIN
	BEGIN TRY
		SET NOCOUNT ON
		SET TRANSACTION ISOLATION LEVEL READ COMMITTED
		DECLARE @return BIT = 1;

		--IF @languageId > 0
		--	BEGIN
		--		SET @TotalRecordCount = (SELECT COUNT(Id)
