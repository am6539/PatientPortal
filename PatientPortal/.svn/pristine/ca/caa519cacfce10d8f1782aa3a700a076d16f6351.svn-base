        #region PermissionRole
        public async Task<ActionResult> Permission(string id)
        {
            List<PermissionViewModel> model;
            try
            {
                //Call API Provider
                var token = _userSession.BearerToken;
                model = await APIProvider.Authorize_Get<List<PermissionViewModel>>(token, controllerName, $"Permissions?id={id}", null, APIConstant.API_Resource_Authencation);
            }
            catch (Exception ex)
            {
                Logger.LogError(ex);
                throw ex.GetBaseException();
            }
            return PartialView("_Detail", model);
        }

        [HttpPost]
        public async Task<ActionResult> UpdatePermission(List<PermissionViewModel> permissions)
        {
            if (permissions != null)
            {
                try
                {
                    // Filter permission with status is true
                    var model = new List<PermissionViewModel>();
                    foreach (var item in permissions)
                    {
                        if (item.IsUsed)
                            model.Add(item);
                    }

                    //Call API Provider
                    var token = _userSession.BearerToken;
                    await APIProvider.Authorize_DynamicTransaction<List<PermissionViewModel>, bool>(model, token, "Role/UpdatePermission", APIConstant.API_Resource_Authencation);
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex);
                    throw ex.GetBaseException();
                }
                TempData["Alert"] = ApplicationGenerator.RenderResult(ApplicationGenerator.TypeResult.SUCCESS, ApplicationGenerator.GeneralActionMessage(null, ApplicationGenerator.TypeResult.SUCCESS));
            }
            return RedirectToAction("Index");
        }
        #endregion
