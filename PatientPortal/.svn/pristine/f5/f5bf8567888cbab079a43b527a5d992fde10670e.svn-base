/*
------------------------------
    QUESTION ROW
------------------------------
*/

#qa-question-list li.question-item {
    display: block;
    /*min-height: 130px;*/
    border-bottom: 1px solid #dadfea;
    /*overflow: hidden;*/
    padding: 20px 35px;
    padding-right: 0;
    position: relative;
}

#qa-question-list > li:nth-child(even) {
    background: #f2ffce;
}

/*
------------------------------
    QUESTION ITEM
------------------------------
*/
.q-left-content .q-ltop-content > h2 {
    width: 100%;
    margin: 0 0 10px !important;
    word-wrap: break-word;
}

.q-ltop-content a.question-title {
    color: #444c63;
    font-size: 18px;
    font-weight: 700;
    word-break: break-word;
}

.q-lbtm-content .question-excerpt {
    color: #6f7d95;
    font-size: 14px;
    font-style: italic;
}

.question-cat span {
    display: inline-block;
    vertical-align: middle;
}

/*
------------------------------
    EDIT INLINE 
------------------------------
*/
.qa-edit-inline {
    float: right;
    margin-top: -18px;
    margin-right: 10px;
}

.qa-detail-edit-inline {
    float: right;
     margin-top: -68px;
    margin-right: 10px;
}

.qa-comment-edit-inline {
    float: right;
   margin-top: 15px;
}


.qa-edit-inline .edit-icon,
.qa-edit-inline .delete-icon,
.qa-comment-edit-inline .edit-icon,
.qa-comment-edit-inline .delete-icon {
    padding: 10px 5px;
    cursor: pointer;
}

.qa-edit-inline,
.qa-comment-edit-inline
 {
    display: none; /*Ẩn icon edit*/
}

.question-item:hover .q-right-content .qa-edit-inline {
    display: block; /*Hiện icon edit in Article page*/
}

.question-detail:hover .qa-edit-inline {
    display: block; /*Hiện icon edit in Article detail page*/
}
.qa-comment-item:hover .qa-comment-edit-inline {
    display: block; /*Hiện icon edit in Article detail page*/
}
/*
------------------------------
   END EDIT INLINE 
------------------------------
*/

/*
------------------------------
    QUESTION STATISTIC
------------------------------
*/
.q-right-content ul.question-statistic {
    text-align: right;
}

.q-right-content ul.question-statistic li {
    display: inline-block;
    text-align: center;
    margin-left: 35px;
}

.q-right-content ul.question-statistic li span {
    width: 46px;
    height: 46px;
    display: block;
    text-align: center;
    line-height: 3.3;
    margin-bottom: 15px;
    border: 1px solid #d9dfe9; /* stroke */
    -moz-border-radius: 25%;
    -webkit-border-radius: 25%;
    border-radius: 25%; /* border radius */
}

.q-right-content ul.question-statistic li.active span {
    background-color: #1abc9c;
    color: #fff;
    border: none;
}

/*
------------------------------------------------------------
   END ARTICLE CSS
------------------------------------------------------------
*/


