/*
------------------------------------------------------------
    ARTICLE CSS
------------------------------------------------------------
*/


/*
------------------------------
    HEADER ROW
------------------------------
*/
.qa-heder {
    /*border-bottom: 1px solid #dadfea;*/
    height: 50px;
}

.qa-title {
    min-height: 55px;
    padding: 10px 20px;
}

    .qa-title span {
        font-size: 24px;
    }

.ask-question {
    float: right;
    margin-top: 10px;
}

/*
------------------------------
    SORT QUESTION ROW
------------------------------
*/
#qa-question-group {
    border-bottom: 1px solid #dadfea;
}

.sort-questions {
    min-height: 44px;
}

    .sort-questions ul {
        display: block;
        padding-left: 5px;
        margin-bottom: 0px !important;
    }

        .sort-questions ul li {
            display: inline-block;
            margin-right: 40px;
        }

            .sort-questions ul li:last-child {
                margin-right: 0;
            }

            .sort-questions ul li a {
                font-size: 14px;
                color: #8c97b2;
                text-decoration: none;
                display: block;
                line-height: 40px;
                border-bottom: 4px solid transparent;
                /*TRANSISTIONS*/
                -webkit-transition: all 0.3s ease;
                -moz-transition: all 0.3s ease;
                -o-transition: all 0.3s ease;
                -ms-transition: all 0.3s ease;
                transition: all 0.3s ease;
            }

                .sort-questions ul li a.active,
                .sort-questions ul li a:hover,
                ul.q-f-sort li a.active,
                ul.q-f-sort li a:hover {
                    border-bottom: 4px solid #f39c12;
                }

/*
------------------------------
    NUMBER OF QUESTION COMBOBOX
------------------------------
*/
.number-of-questions-wrapper {
    text-align: right;
    /*margin-right: 5px;*/
    margin-top: 7px;
    position: relative;
}

.number-of-questions-text {
    color: #8b97b1;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
}

.number-of-questions-wrapper .number-of-questions {
    display: inline-block;
    width: 100px;
    text-align: left;
}
