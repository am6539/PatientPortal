@using PatientPortal.Provider.Helpers;
@model List<PatientPortal.Internal.Models.DepartmentViewModel>

<div class="card">
    <div class="card-title">
        @Html.ITitle("Chuyên khoa", TitleBar.List)
    </div>
    <div class="card-content">
        <table id="table_id" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" role="grid" aria-describedby="example_info" style="width: 100%;">
            <thead>
                <tr role="row" class="thead-list">
                    <th aria-sort="ascending">STT</th>
                    <th style="display: none">Id</th>
                    <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto">Chuyên khoa</th>
                    <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto">Url</th>
                    <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto">Hiển thị</th>
                    <th style="width: 22%"></th>
                </tr>
            </thead>
            <tbody>
                @{ var i = 1; }
                @foreach (var item in Model)
                {
                    <tr role="row">
                        <td class="sorting_1">@i</td>
                        <td style="display: none">@item.Id</td>
                        <td class="">@item.Name</td>
                        <td class="">@item.Handler</td>
                        <td class="">@item.IsUsed</td>
                        <td>
                            @Html.IGridButton(@Url.Action("Services", new { departmentId = item.Id }), ActionButton.Detail)
                            @Html.IGridButton(@Url.Action("Edit", new { id = item.Id }), ActionButton.Edit)
                            @Html.IGridButton(@Url.Action("Delete", new { id = item.Id, Title = item.Name }), ActionButton.Delete, "", new { @class = "modal-link btn btn-sm btn-delete btn-danger" })
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>




