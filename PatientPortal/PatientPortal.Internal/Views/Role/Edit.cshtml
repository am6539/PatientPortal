@using PatientPortal.Provider.Helpers;
@model PatientPortal.Internal.Models.RoleViewModel
@{ 
    ViewBag.Title = "Nhóm tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-title">
        @Html.ITitle("Nhóm tài khoản", TitleBar.Edit)
    </div>
    <div class="card-content">
        @using (Html.IBeginForm("Edit", "Role"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.IGroupSubmitButton("Cập nhật thông tin", Url.Action("Index"))
            @Html.HiddenFor(m => m.Id)
            @Html.IGroupTextBoxFor(m => m.Name, true, 12, "Tên nhóm tài khoản")
        }
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}